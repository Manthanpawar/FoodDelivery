<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <!-- <android.support.v4.widget.CircleImageView
                android:id="@+id/imgfooditem"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/avtar" />
-->
            <ImageView
                android:id="@+id/orderimgfooditem"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/googleg_standard_color_18" />

            <TextView
                android:id="@+id/orderitemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/orderimgfooditem"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/orderimgfooditem"
                android:text="Item Name"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/orderitemdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/orderitemname"
                android:layout_below="@+id/orderitemname"
                android:layout_marginTop="10dp"
                android:text="Item Description"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/orderitemprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/orderitemdesc"
                android:layout_below="@+id/orderitemdesc"
                android:layout_marginTop="10dp"
                android:text="Item Price"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ordertxtquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="29dp" />

            <TextView
                android:id="@+id/ordertxtdisplayquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/ordertxtquantity"
                android:text="Quantity:"
                android:visibility="invisible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>